<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_room_msg_layout_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_room_avatar_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/female" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_id_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="ID: 10000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_room_msg_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/receive_msg_bg"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/margin_img"
                android:text="@string/nullMsg"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_room_msg_layout_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_room_msg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_toLeftOf="@+id/iv_room_avatar_right"
            android:background="@drawable/send_msg_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_img"
            android:textColor="@color/colorBlack"
            android:text="@string/nullMsg"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/iv_room_avatar_right"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/male" />
    </RelativeLayout>

</LinearLayout>